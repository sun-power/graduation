<link rel="stylesheet" href="/css/bootstrap.min.css">
<%- include('head') %>
  <style>
    .table-box{
      width: 900px;
      float: left;
      height: 600px;
      margin-top: 50px;
      margin-left: 100px;
    }
    *{
      margin: 0 auto;
      padding: 0;
    }
    table{
      width: 900px;
      text-align: center;
      border-collapse: collapse;
    }
    table tr th,tr td{
      color:#000000;
      height: 30px;
      line-height: 30px;
      text-align: center;
      border:1px solid #d9e0ee;
    }
  </style>
  <div class="table-box">
    <table>
      <thead>
      <tr>
        <th>订单号</th>
        <th>收件人</th>
        <th>收件人手机号</th>
        <th>收件地址</th>
        <th>编辑</th>
        <th>删除</th>
      </tr>
      </thead>
      <tbody>
      <% for(var i=0;i<info.length;i++){ %>
      <tr>
        <td><%= info[i].order_id %></td>
        <td><%= info[i].order_name %></td>
        <td><%= info[i].order_phone %></td>
        <td><%= info[i].order_place %></td>
        <td><a href="/users/updateorder/<%= info[i].order_id %>">编辑</a></td>
        <td><a href="/users/deleteorder/<%= info[i].order_id %>">删除</a></td>
      </tr>
      <% } %>
      </tbody>
    </table>
    <div style="width:500px;margin-left: 50px;">
      <ul class="pagination" id="pagination1"></ul>
    </div>
    <div style="clear:both"></div>
  </div>


