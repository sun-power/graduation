<link rel="stylesheet" href="/css/bootstrap.min.css">
<%- include('head') %>
<style>
  .middle{
    margin-top: 30px;
  }
  .middleIn{
    background: #FFFFFF;
    height: 500px;
  }
  .middleIn-top{
    padding-left: 350px;
    height: 30px;
    border-bottom: 1px solid #F3F3F3;
  }
  .middleIn-top>h3{
    height: 30px;
    line-height: 30px;
    color:#000;
    font-weight: 900;
  }
  .middleIn-middle{
    margin-left: 430px;
    margin-top: 30px;
  }
  .middleIn-middle p{
    width: 300px;
    height: 50px;
    line-height: 50px;
    text-align: right;
  }
  .middleIn-middle span{
    color: #000000;
  }
  s{
    color: red;
  }
  input[type="text"]{
    width: 200px;
    height: 30px;
    border: 1px solid #D7D7D7;
    font-size: 15px;
    margin-left: 10px;
  }
  input[type="submit"]{
    width: 100px;
    height: 30px;
    line-height: 30px;
    background: red;
    color: #FFFFFF;
    font-size: 15px;
    font-weight: 900;
    border-radius: 20px;
    margin-right: 100px;
  }
</style>
<div class="middle">
  <div class="middleIn w">
    <div class="middleIn-top">
      <h3><%= title%></h3>
    </div>
    <div class="middleIn-middle">
      <form action="/addorderCheck" method="post" class="form-inline">
        <p><span>收件人：<s>*</s></span><input type="text" name="name" ></p>
        <p><span>手机号：<s>*</s></span><input type="text" name="phone" ></p>
        <p>
          <div data-toggle="distpicker">
            <span>收件地址：<s>*</s></span>
            <div class="form-group">
              <label class="sr-only" for="province1">Province</label>
              <select class="form-control" id="province1" name="province1"></select>
            </div>
            <div class="form-group">
              <label class="sr-only" for="city1">City</label>
              <select class="form-control" id="city1" name="city1"></select>
            </div>
            <div class="form-group">
              <label class="sr-only" for="district1">District</label>
              <select class="form-control" id="district1" name="district1"></select>
            </div>
          </div>
        </p>
        <p><input type="submit" value="提交订单"></p>
      </form>
    </div>
  </div>
</div>
<%- include('foot') %>
<!--固定右侧窗口开始-->
<div class="rightMenu">
  <p class="rightMenu-p1"><img src="/images/right1.png" alt="loading.."><a href="/car">购物车</a></p>
  <p class="rightMenu-p2"><img src="/images/right2.png" alt="loading.."></p>
  <p class="rightMenu-p3"><img src="/images/right3.png" alt="loading.."></p>
  <p class="rightMenu-p4"><img src="/images/right4.png" alt="loading.."></p>
  <p class="rightMenu-p5"><img src="/images/right5.png" alt="loading.."></p>
  <p class="rightMenu-p6"><img src="/images/right6.png" alt="loading.."></p>
  <p class="rightMenu-p7"><a href="#"><img src="/images/right7.png" alt="loading.."></a></p>
</div>
<!--固定右侧窗口结束-->
<script src="/js/jquery-1.11.3.min.js"></script>
<script src="/js/distpicker.data.js" type="text/javascript"></script>
<script src="/js/distpicker.js" type="text/javascript"></script>
<script src="/js/main.js" type="text/javascript"></script>
<script src="/js/index.js"></script>
<script>
  $(function(){
    $('form').submit(function(){
      var name = $("input[name='name']").val();
      var phone = $("input[name='phone']").val();
      var place = $("input[name='place']").val();
      if(name == ''){
        alert('收件人不能为空！');
        return false;
      }else if(!/^1[5384]\d{9}$/.test(phone)){
        alert('手机号格式不对，请输入正确的格式！');
        return false;
      }else if(place == ''){
        alert('地址不能为空！');
        return false;
      }
    })
  })
</script>
</body>
</html>